- set_meta_tags title: t('.title'), og: { title: t('.og_title', user: @post.user.name, data: l(@post.created_at, format: :simple)), description: @post.body, image: @post.post_images.first.image_url }

.container
  h1
    | Posts#show
  .row
    .col-sm-4.col-md-6
      = image_tag @post.post_images.first.image_url, size: '600x400'
    .col-sm-3.col-md-6
      .card
        .card-body
          ul class='list-inline'
            li class='list-inline-item'
              = link_to user_path(@post.user) do
                = image_tag @post.user.image_url, class: 'rounded-circle', size: '30x30'
            li class='list-inline-item'
              = @post.user.name
            p
              = @post.body
            li class='list-inline-item'
              = l @post.created_at, format: :short
            li class='list-inline-item'
              = render 'posts/crud_menus', post: @post if current_user&.own?(@post)
            - unless current_user&.own?(@post)
              li class='list-inline-item'
                = render 'likes/like', post: @post
              li class='list-inline-item'
                = render 'bookmarks/bookmark', post: @post
    
    = render 'comments/form', { post: @post, comment: @comment }
    p
    = render 'comments/comments', { comments: @comments }


      